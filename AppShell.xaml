<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CAMBIOVENTANAS.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CAMBIOVENTANAS"
    Shell.FlyoutBehavior="Flyout"
    Title="CAMBIOVENTANAS">
    <!-- Elemento del menú para la página principal -->
    <!-- 
        FlyoutItem "Home": Agrupa las opciones principales de la aplicación.
        Contiene dos subpáginas: "Tipos de Dragones" y "Tipos de Colas".
        Que se han agregado a la aplicación para mostrar información sobre los dragones y sus tipos.
    -->
    <FlyoutItem Title="Home">
        <ShellContent
        Title="Tipos de Dragones"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="TiposDeDragones" />
        <ShellContent
        Title="Tipos de Colas"
        ContentTemplate="{DataTemplate local:NewPage5}"
        Route="NewPage5" />
    </FlyoutItem>

    <!-- Secciones individuales para diferentes tipos de dragones -->

    <FlyoutItem Title="Marrones">

        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:NewPage1}"
        Route="NewPage1" />
    </FlyoutItem>
    <FlyoutItem Title="Naranjas">

        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:NewPage2}"
        Route="NewPage2" />
    </FlyoutItem>
    <FlyoutItem Title="Rojos">

        <ShellContent
     Title="Home"
     ContentTemplate="{DataTemplate local:NewPage3}"
     Route="NewPage3" />
    </FlyoutItem>
    <FlyoutItem Title="Verdes">

        <ShellContent
     Title="Home"
     ContentTemplate="{DataTemplate local:NewPage4}"
     Route="NewPage4" />
    </FlyoutItem>
    <FlyoutItem Title="Negros">
        <ShellContent
     Title="Home"
     ContentTemplate="{DataTemplate local:NewPage6}"
     Route="NewPage6" />
    </FlyoutItem>
    <FlyoutItem Title="Azules">
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:NewPage7}"
        Route="NewPage7" />
    </FlyoutItem>
    <FlyoutItem Title="Dorados">
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:NewPage9}"
        Route="NewPage9" />
    </FlyoutItem>
    <FlyoutItem Title="Desconocidos">

        <ShellContent
         Title="Home"
         ContentTemplate="{DataTemplate local:NewPage8}"
         Route="NewPage8" />
    </FlyoutItem>


</Shell>
