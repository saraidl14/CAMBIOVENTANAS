<?xml version="1.0" encoding="utf-8" ?>
<!--
    Pagina encargada de mostrar información sobre los dragones desconocidos.
    La página incluye una imagen representativa y un botón para acceder a los detalles adicionales.
    -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CAMBIOVENTANAS.NewPage8"
             Title="Desconocido">
    <!--Scrollview nos permite navegar por la pagina con la ruleta del raton si el texto es demasiado largo -->
    <ScrollView>
        <VerticalStackLayout>
            <!-- Título principal de la página, indicando que trata sobre los dragones desconocidos -->
            <Label 
        Text="Desconocido"
        Style="{StaticResource Headline}"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
            <!-- Imagen representativa de los dragones desconocidos -->
            <Image Source="desconocido2.png" 
       HeightRequest="400"/>
            <!-- Botón para ver más detalles sobre los dragones desconocidos -->
            <Button Text="Detalles"
        Clicked="DetallesBTN"
        x:Name="btnLBL" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>